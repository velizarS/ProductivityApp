@model ProductivityApp.Web.ViewModels.Habits.HabitDetailViewModel

@{
    ViewData["Title"] = "Delete Habit";
}

<div class="alert alert-danger">
    <strong>Warning!</strong> Are you sure you want to delete this habit?
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        }

        <p class="card-text"><strong>Frequency:</strong> @Model.Frequency.ToString()</p>
        <p class="card-text"><strong>Total Completions:</strong> @Model.TotalCompletions</p>

        @if (Model.Completions != null && Model.Completions.Any())
        {
            <p><strong>Completed on:</strong></p>
            <ul>
                @foreach (var date in Model.Completions.OrderByDescending(d => d))
                {
                    <li>@date.ToString("yyyy-MM-dd")</li>
                }
            </ul>
        }
    </div>

    <div class="card-footer">
        <form asp-action="DeleteConfirmed" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>
