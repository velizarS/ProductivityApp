@model IEnumerable<ProductivityApp.Web.ViewModels.Habits.HabitListViewModel>

@{
    ViewData["Title"] = "My Habits";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Add New Habit</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Total Completions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var habit in Model)
        {
            <tr>
                <td>@habit.Name</td>
                <td>@habit.Description</td>
                <td>@habit.TotalCompletions</td>
                <td>
                    <a asp-action="Details" asp-route-id="@habit.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@habit.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@habit.Id" class="btn btn-danger btn-sm">Delete</a>
                    <form asp-action="MarkComplete" asp-route-id="@habit.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">Mark Complete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
