@model ProductivityApp.Web.ViewModels.Habits.HabitListPageViewModel

@{
    ViewData["Title"] = "My Habits";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Add New Habit</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Frequency</th>
            <th>Total Completions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var habit in Model.Habits)
        {
            <tr>
                <td>@habit.Name</td>
                <td>@habit.Description</td>
                <td>@habit.Frequency.ToString()</td>
                <td>@habit.TotalCompletions</td>
                <td>
                    <button class="btn btn-info btn-sm"
                            onclick="openModal('@Url.Action("DetailsPartial", "Habits", new { id = habit.Id })')">
                        View
                    </button>
                    <a asp-action="Edit" asp-route-id="@habit.Id" class="btn btn-warning btn-sm">Edit</a>
                    <button class="btn btn-danger btn-sm"
                            onclick="openModal('@Url.Action("DeletePartial", "Habits", new { id = habit.Id })')">
                        Delete
                    </button>
                    <form asp-action="MarkComplete" asp-route-id="@habit.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">Mark Complete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }
    </ul>
</nav>

<div id="modalContainer"></div>