@using ProductivityApp.Common.Enums
@model ProductivityApp.Web.ViewModels.Habits.HabitEditViewModel

@{
    ViewData["Title"] = "Edit Habit";
}


<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Frequency"></label>
        <select asp-for="Frequency" class="form-control" asp-items="Html.GetEnumSelectList<FrequencyType>()"></select>
        <span asp-validation-for="Frequency" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
