@model ProductivityApp.Web.ViewModels.Habits.HabitDetailViewModel

<div class="alert alert-danger">
    <strong>Warning!</strong> Are you sure you want to delete this habit?
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        }

        <p class="card-text"><strong>Frequency:</strong> @Model.Frequency.ToString()</p>
        <p class="card-text"><strong>Total Completions:</strong> @Model.TotalCompletions</p>
    </div>

    <div class="card-footer text-end">
        <form asp-action="Delete" asp-controller="Habits" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
        </form>
        <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
    </div>
</div>
