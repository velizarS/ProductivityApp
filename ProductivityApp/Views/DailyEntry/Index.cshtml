@model List<ProductivityApp.Web.ViewModels.DailyEntries.DailyEntryListViewModel>

@{
    ViewData["Title"] = "Daily Entries";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Habits</th>
            <th>Tasks</th>
            <th>Journals</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Date.ToShortDateString()</td>
                <td>@entry.HabitsCount</td>
                <td>@entry.TasksCount</td>
                <td>@entry.JournalCount</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@entry.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
