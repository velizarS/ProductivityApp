@model ProductivityApp.Web.ViewModels.Tasks.TaskDetailViewModel

@{
    ViewData["Title"] = "Delete Task";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <p>Are you sure you want to delete this task?</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text">@Model.Description</p>
        }
        <p><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
        <p><strong>Completed:</strong> @(Model.IsCompleted ? "Yes" : "No")</p>
        @if (!string.IsNullOrEmpty(Model.CompletionNote))
        {
            <p><strong>Completion Note:</strong> @Model.CompletionNote</p>
        }
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
