@model ProductivityApp.Web.ViewModels.Tasks.TaskDetailViewModel

<div class="alert alert-danger">
    <p>Are you sure you want to delete this task?</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p>@Model.Description</p>
        }
        <p><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
        <p><strong>Completed:</strong> @(Model.IsCompleted ? "Yes" : "No")</p>
    </div>
</div>

<form asp-action="Delete" asp-controller="Tasks" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
</form>
