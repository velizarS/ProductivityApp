@model ProductivityApp.Web.ViewModels.Journal.JournalEntryCreateViewModel

<form asp-controller="Journal" asp-action="Create" method="post">
    <div class="mb-2">
        <label asp-for="Date" class="form-label mb-1"></label>
        <input asp-for="Date" class="form-control form-control-sm" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Mood" class="form-label mb-1"></label>
        <select asp-for="Mood" class="form-select form-select-sm"
                asp-items="Html.GetEnumSelectList<ProductivityApp.Common.Enums.MoodType>()"></select>
        <span asp-validation-for="Mood" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Note" class="form-label mb-1"></label>
        <textarea asp-for="Note" class="form-control form-control-sm" rows="2"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-sm btn-success">Save</button>
        <button type="button" id="cancelAddJournal" class="btn btn-sm btn-secondary">Cancel</button>
    </div>
</form>
